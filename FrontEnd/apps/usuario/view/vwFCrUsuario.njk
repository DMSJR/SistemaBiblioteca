{% extends "templates/base.html" %}
{% block content %}
    <div x-data="usuarioForm()">
        <ol class="breadcrumb mb-2">
            <li class="breadcrumb-item active">{{ title }}</li>
        </ol>
        <div class="row">
            <div class="col-12">
                <div class="card-header">
                    {{ tite }}
                </div>
                <div class="card-body">
                    <div
                        class="">
                        {# <form @submit.prevent="submitForm"> #}
                        <form>
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label for="código">Código</label>
                                        <input type="text" class="form-control" id="codigo" x-model="form.codigo" required="required"></div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label for="nome">Nome do Usuário:</label>
                                            <input type="text" class="form-control" id="nome" x-model="form.nome"></div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label for="email">E-mail</label>
                                            <input type="email" class="form-control" id="email" x-model="form.email"></div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="form-group">
                                            <label for="telefone">Telefone</label>
                                            <input type="number" class="form-control" id="telefone" x-model="form.telefone"></div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label for="datanasc">Data devolução</label>
                                                <input type="date" class="form-control" id="datanasc" x-model="form.datanasc"></div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="multas">Multas</label>
                                                <input type="number" class="form-control" id="multas" x-model="form.multas"></div>
                                            </div>
                                            <button type="button" @click="insertForm()" class="btn btn-primary mt-4">Salvar</button>
                                            <a href="/usuario/manutUsuario" class="btn btn-info mt-4 ml-2" role="button" aria-disabled="true">Retornar</a>
                                        </form>
                                        <div class="mt-3">
                                            <template x-if="message">
                                                <div :class="messageClass" x-text="message"></div>
                                            </template>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <script>
                        window.onload = function () {
                            windowOnLoad();
                            // @ Caso tenha dado erro no servidor frontEnd, ele será mostrado aqui.
                            const localErro = "{{ erro }}";
                            if (localErro != "") {
                                alert("[vwUsuario|onload]Servidor retornou o erro:" + localErro);
                            }
                            $("#codigo").focus();
                        };
                        function UsuarioForm() {
                            return {
                                form: {
                                    codigo: '',
                                    nome: '',
                                    email: '',
                                    telefone: '',
                                    datanasc: '',
                                    multas: '',
                                    deleted: false
                                },
                                message: '',
                                messageClass: '',
                                async insertForm() {
                                    try {
                                        console.log("Valor na página:", JSON.stringify(this.form))
                                        const response = await fetch('/usuario/insertUsuario', {
                                            method: 'POST',
                                            headers: {
                                                "Content-Type": "application/json"
                                            },
                                            body: JSON.stringify(this.form)
                                        });
                                        const result = await response.json();
                                        console.log("Valor na response:", response);
                                        console.log("Valor na result:", result);
                                        if (result.status == "ok") {
                                            alert("Usuario cadastrado com suscesso");
                                            this.resetForm();
                                        } else {
                                            const errorData = result.status;
                                            this.message = `Erro! Não foi possível cadastrar o usuario devido ao erro: ${errorData}`;
                                            this.messageClass = 'alert alert-danger';
                                        }
                                    } catch (error) {
                                        this.message = `Erro de conexão: ${
                                            error.message
                                        }`;
                                        this.messageClass = 'alert alert-danger';
                                    }
                                },
                                resetForm() {
                                    this.form = {
                                        codigo: '',
                                        nome: '',
                                        email: '',
                                        telefone: '',
                                        datanasc: '',
                                        multas: '',
                                        deleted: false
                                    };
                                    this.message = false;
                                }
                            };
                        }
                    </script>
                {% endblock %}