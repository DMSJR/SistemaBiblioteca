{% extends "templates/base.html" %}

{% block content %}

  <ol class="breadcrumb mb-2">
    <li class="breadcrumb-item active">{{title}}</li>
  </ol>
  <div class="row">
    <div class="col-xl-12">

      <div class="card-header">
        Manutenção de Autores
      </div>

      <div class="card-body">
        <div class="">
          <div style="margin-bottom: 15px;">
            <a href="/autor/insertAutor" class="btn btn-primary">
              Inserir novo Autor
            </a>
          </div>

          <div style="background-color: #f8f9fa">
            <table id="tabAutor" class="display" style="width:100%">
              <thead>
                <tr>
                  <th>Ação</th>
                  <th>Código</th>
                  <th>Nome</th>
                  <th>Nacionalidade</th>
                  <th>Data de Nascimento</th>
                  <th>Royalty</th>
                </tr>
              </thead>
              <tbody>
                {% for reg in data %}
                  <tr>
                    <td>
                      {# Link para visualização dos dados #}
                      <a href="/autor/viewAutor/{{ reg.autor_id }}" title="Visualizar">
                        <i class="fas fa-search"></i>
                      </a>

                      {# Link para atualização e remoção dos dados #}
                      <a href="/autor/updateAutor/{{ reg.autor_id }}" title="Atualizar" style="margin-left: 10px;">
                        <i class="fas fa-pencil-alt"></i>
                      </a>
                    </td>
                    <td>{{reg.codigo}}</td>
                    <td>{{reg.nome}}</td>
                    <td>{{reg.nacionalidade}}</td>
                    <td>{{reg.datanasc}}</td>
                    <td>{{reg.royalties}}</td>
                  </tr>
                {% endfor %}
              </tbody>
            </table>

          </div>

        </div>
      </div>
    </div>
  </div>

  <script>

    window.onload = function () {
      windowOnLoad();
      //@ Caso tenha dado erro no servidor frontEnd, ele será mostrado aqui.
      const localErro = "{{erro}}";
      if (localErro != "") {
        alert("[vwAutor|onload] Servidor retornou o erro:" + localErro);
      }

      new DataTable('#tabAutor');
    };
  </script>

{% endblock %}
