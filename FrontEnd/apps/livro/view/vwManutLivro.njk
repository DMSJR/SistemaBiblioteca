  {% extends "templates/base.html" %}

  {% block content %}

    <ol class="breadcrumb mb-2">
      <li class="breadcrumb-item active"></li>
    </ol>
    <div class="row">
      <div class="col-xl-12">

        <div class="card-header">
          Manutenção de Livros
        </div>

        <div class="card-body">
          <div class="m1">
            <div style="margin-bottom: 15px;">
              <a href="/livro/InsertLivro" class="btn btn-primary">
                Inserir novo Livro
              </a>
            </div>

            <div style="background-color: #f8f9fa">
              <table id="tabLivro" class="display" style="width:100%">
                <thead>
                  <tr>
                    <th>Ação</th>
                    <th>Código</th>
                    <th>Título</th>
                    <th>Data de Publicação</th>
                    <th>Gênero</th>
                    <th>Valor</th>
                  </tr>
                </thead>
                <tbody>
                  {% for reg in data %}
                    <tr>
                      <td>
                        {# Link para visualização dos dados #}
                        <a href="/livro/viewLivro/{{ reg.livro_id }}" title="Visualizar">
                          <i class="fas fa-search"></i>
                        </a>

                        {# Link para atualização e remoção dos dados #}
                        <a href="/livro/updateLivro/{{ reg.livro_id }}" title="Atualizar" style="margin-left: 10px;">
                          <i class="fas fa-pencil-alt"></i>
                        </a>
                      </td>
                      <td>{{reg.codigo}}</td>
                      <td>{{reg.titulo}}</td>
                      <td>{{reg.data_publicacao}}</td>
                      <td>{{reg.genero}}</td>
                      <td>{{reg.valor}}</td>
                    </tr>
                  {% endfor %}
                </tbody>
              </table>

            </div>

          </div>
        </div>
      </div>
    </div>

    <script>

      window.onload = function () {
        windowOnLoad();
        //@ Caso tenha dado erro no servidor frontEnd, ele será mostrado aqui.
        const localErro = "{{erro}}";
        if (localErro != "") {
          alert("[vwLivro|onload] Servidor retornou o erro:" + localErro);
        }

        new DataTable('#tabLivro');
      };
    </script>

  {% endblock %}
